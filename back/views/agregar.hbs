<link rel='stylesheet' href='/stylesheets/agregar.css'/>
<link href="https://fonts.googleapis.com/css2?family=Lora&family=Montserrat:wght@100&family=Old+Standard+TT&family=Open+Sans:wght@300;400;700&display=swap" rel="stylesheet"/>


 <div class="container">
        <img src="/images/logo.png" alt="logo">
        <h1>Soledad<samp class="design">design</samp></h1>
</div>

<div>
    <div>
        <div class="container1">
            <h3>Agregar nuevo cliente</h3>
            <form action="/admin/agregar" method="post">
                <div>
                    <input type="text" placeholder="nombre" name="clientes">
                </div>
                <div>
                    <input type="text" placeholder="finalizado?" name="finalizado">
                </div>
                <div>
                    <input type="number" placeholder="importe" name="importe">
                </div>
                <div>
                    <input type="number" placeholder="total" name="total">
                </div>
                 {{#if error}}
                     <p>{{message}}</p>
                 {{/if}}
                <button type="submit">Guardar</button>
            </form>

           
        </div>
    </div>
</div>